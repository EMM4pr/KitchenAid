<%= link_to "← go back", kitchens_path, class:"link" %>

  <h1>hey there <%= current_user.first_name.downcase %> 🧑‍🍳</h1>

<div class="background">
  <div class="bookings_conainer">
    <h4>Your current bookings:</h4>
    <% @bookings.each do |booking| %>
      <div class="current-container">
        <div class="d-flex align-items-center">
          <%= cl_image_tag booking.kitchen.photo.key, width: 60, height: 60%>
          <p id="kitchen-name"> <%= booking.kitchen.name %> </p>
        </div>
        <p>You have <strong><%= booking.calculate_days_left %></strong> days left</p>
      </div>
    <%end%>
  </div>
  <div class="items_conainer">
    <h4>Your kitchen appliances:</h4>
    <% @kitchens.each do |kitchen| %>
      <div class="items-container">
        <div class="d-flex align-items-center justify-content-between">
          <%= cl_image_tag kitchen.photo.key, width: 60, height: 60%>
          <p id="kitchen-name"><%= kitchen.name %></p>

          <%= link_to "✎", edit_kitchen_path(kitchen), class:"link" %>
          <%# %= button_to "🗑️", kitchen, class: "link" %>
        </div>
  </div>
    <% end %>
</div>
