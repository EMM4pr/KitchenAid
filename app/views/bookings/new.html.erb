<%# Route: kitchens/:id/bookings/new %>
<h1>Make a booking</h1>
<%# <p>Find me in app/views/bookings/new.html.erb</p> %>
<div class="booking-container">
  <div class="container">
    <div class="d-flex justify-content-between">
    <div>
      <%= image_tag "logo.png" %>
    </div>
      <div>
        <%= simple_form_for [@kitchen, @booking] do |form| %>
            <%= form.input :start_date %>
            <%= form.input :end_date %>
            <%= form.input :message %>
          <%= form.submit "Submit", class: "btn btn-primary" %>
        <% end %>

        <%= link_to "Back", kitchen_path(@kitchen), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
